<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:centerColor="#4CB8C4"
                android:startColor="#3CD3AD"
                android:endColor="#4CB8C4"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:centerColor="#4CB8C4"
                android:startColor="#3CD3AD"
                android:endColor="#4CB8C4"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</selector>