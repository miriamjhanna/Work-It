<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:fadeScrollbars="false"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".LogExercise"
        android:background="@drawable/my_gradient"
        android:id="@+id/log_exercise_main">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Workout"
            android:id="@+id/log_ex_title"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#FFFFFF"
            android:textSize="45sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_ex_title"
            android:id="@+id/log_ex_description"
            android:text="Your workout initially will consist of all of the exercises in your database. You should start by removing any exercises you do not plan to do in this workout."
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_ex_description"
            android:text="* Short Click: Get info about an exercise"
            android:id="@+id/log_ex_short"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="9dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log_ex_short"
            android:text="* Long Click: Remove an exercise from this workout"
            android:id="@+id/log_ex_long"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log_ex_long"
            android:text="Start My Workout"
            app:backgroundTint="@null"
            android:background="@drawable/button_gradient"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/log_ex_start_workout_button"
            android:onClick="onButtonClickLog"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@+id/log_ex_start_workout_button"
            android:id="@+id/log_ex_space"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/log_ex_space"
            android:id="@+id/log_ex_list"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="16dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/log_ex_ret_home_button"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            android:text="Return Home"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            android:onClick="onButtonClickLog"/>
    </RelativeLayout>
</ScrollView>