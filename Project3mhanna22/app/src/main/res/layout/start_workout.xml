<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal"
    android:fadeScrollbars="false"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".StartWorkout"
        android:background="@drawable/my_gradient"
        android:id="@+id/start_workout_main">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout!"
            android:id="@+id/start_workout_title"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_workout_title"
            android:text="Click an exercise each time you complete a set."
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/start_workout_info"
            android:layout_marginBottom="16dp"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/start_workout_info"
            android:id="@+id/start_workout_list"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="15dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="16dp"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/start_workout_ret_home_button"
            android:background="@drawable/button_gradient"
            app:backgroundTint="@null"
            android:text="Return Home"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="20sp"
            />
    </RelativeLayout>
</ScrollView>